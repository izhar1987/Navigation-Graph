<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Raised Button -->
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Raised Button"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@+id/flat_button"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/colorPrimary" />

    <!-- Flat Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/flat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flat Button"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@+id/fab_button"
        app:layout_constraintTop_toBottomOf="@+id/raised_button"
        app:backgroundTint="@color/colorPrimary"
        app:backgroundTintMode="src_over"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

    <!-- Floating Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAB"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flat_button"
        app:backgroundTint="@color/colorPrimary" />
</LinearLayout>
